@model IEnumerable<DotNetSevenTestApp.Models.StudentDbModel.Student>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-6"><h1>List of All Students</h1></div>
    <div class="col-6 text-end"><a asp-action="Create" class="btn btn-primary">Create New Record</a></div>
</div>
<hr /><br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Standard)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Standard)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StdId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StdId">Details</a> |
                <a asp-action="Delete" onclick="return confirm('Do you want to delete the record?')" asp-route-id="@item.StdId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
